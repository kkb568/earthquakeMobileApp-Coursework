<resources>
    <style name="editText">
        <item name="android:layout_marginBottom">15sp</item>
        <item name="android:width">800sp</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>
    <style name="textViewHeading">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="searchButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">10sp</item>
    </style>
    <style name="dataResultTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:background">@drawable/data_result</item>
    </style>
    <style name="earthquakeDetailsTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10sp</item>
